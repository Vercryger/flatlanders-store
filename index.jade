doctype html
html(ng-app="gemStore")
  head
    meta(charset="UTF-8")
    title Flatlanders Store

    link(rel="icon" href="favicon.png")
    link(rel="stylesheet" href="css/main.css")

  body(ng-controller= "StoreController as store")
    .container
      .centered
        h1 Flatlander Crafted Gems
        h2 – an Angular store –
      // list of stones
      ul.list-group
        li.list-group-item(ng-repeat="product in store.products  | orderBy:'+price'", ng-hide="product.soldOut")
          product-gallery

          .right-centered
            h3 {{ product.name }}
            h4 {{ product.price  | currency }}
            button.btn.btn-warning(ng-show="product.canPurchase")   
              span.glyphicon.glyphicon-shopping-cart  
              |  Add to Cart

          product-panels

    // some imported scripts
    script(src="js/angular.min.js")
    script(src="js/app.js")
    script(src="js/products.js")

